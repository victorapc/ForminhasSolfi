<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inf_Prod_Produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/rose_gold_300"
                android:text="FS01 - Camelinha de luxo"
                android:layout_margin="3dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inf_Prod_imagem"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/inf_Prod_Informacoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Forminhas em papel.\n (Diversas cores)"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold|italic"
                        android:text="@string/valores">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/rose_gold_300"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:text="1.35"
                        android:gravity="left">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>