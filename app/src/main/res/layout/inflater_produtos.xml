<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inf_Prod_Produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/rose_gold_300"
                android:text="FS01 - Camelinha de luxo"
                android:layout_margin="3dp">
            </TextView>

            <TextView
                android:id="@+id/inf_Prod_Informacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Forminha em 04 camadas sendo: 02 de pétalas papel especial: 01 de tela dourada e 01 sépala em tela escócia natural. (Cores diversas)"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/inf_Prod_imagem"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:padding="3dp"
                        android:text="@string/quantidade">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp"
                        android:text="@string/unidades25">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp"
                        android:text="@string/unidades50">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="1dp"
                        android:text="@string/unidades100">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp"
                        android:text="200 Unidades">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp"
                        android:text="@string/unidades300">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp"
                        android:text="@string/unidades500">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:padding="3dp"
                        android:text="@string/valores">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor200"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor300"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/inf_Prod_Valor500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_gold_300"
                        android:textColor="@color/white"
                        android:layout_marginTop="1dp"
                        android:paddingLeft="3dp">
                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>